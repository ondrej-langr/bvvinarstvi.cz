        {% endfor %}
        <hr />
        <li class="gold">{{ "Rezervace na telefonním čísle"|t }}</li>
        <li class="white"><a href="tel:{{ __layout.contacts.shop.telephone }}">{{ __layout.contacts.shop.telephone }}</a></li>
        <li class="white">
          <a href="mailto:{{ __layout.contacts.shop.email }}">{{ __layout.contacts.shop.email }}</a>
        </li>
      </ul>
