    <div class="overlay" data-aos="my-animation"></div>
    <div class="slider slider-bg">
      {% for item in sliderItems %}
        {% set fullImage = image(item.photo, 1920) %}
        <div class="slider-bg-content">
          <img src="{{ fullImage.src }}"
            width="{{ fullImage.width }}"
            height="{{ fullImage.height }}" />
        </div>
      {% endfor %}
    </div>
    <div class="header-content">
      <div class="main-slider">
        <div class="col-12 col-lg-8 col-md-7 col-sm-12 col-xl-8 col-xxl-8 slider slider-for"
          data-aos="fade-up"
          data-aos-delay="300">
          {% for item in sliderItems %}
            <div class="slider-for-content">
              <h2>
                {{ item.title }}
              </h2>
              <p>
                {{ item.text }}
              </p>
            </div>
          {% endfor %}
        </div>
        <div class="action col-12 col-lg-4 col-md-5 col-sm-12 col-xl-4 col-xxl-4"
          data-aos="fade-up"
          data-aos-delay="600">
          {% for item in sliderItems %}
            <a href="#"
              data-slide="{{ loop.index }}">
              <small>{{ loop.index }}</small>
              {% if item['menu-title'] %}
                {{ item['menu-title'] }}
              {% else %}
                {{ item.title }}
              {% endif %}
            </a>
          {% endfor %}
        </div>
      </div>
      <div class="col-lg-4 col-xl-4 col-xxl-4 image-around">
